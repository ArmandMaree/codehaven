<h2>Blogs</h2>

{{#each model as |blog|}}
	<div class="row blog_entry">
		<div class="col-2"><img class="blog_image" src="/assets/images/{{blog.image}}" /></div>
		<div class="col-8 row">
			<div class="col-12 blog_title"><h3>{{blog.title}}</h3></div>
			<div class="col-12 blog_short"><p>{{blog.short}}</p></div>
			<div class="col-12 blog_date"><p>Last modified: {{blog.date}}</p></div>
		</div>
	</div>
{{/each}}